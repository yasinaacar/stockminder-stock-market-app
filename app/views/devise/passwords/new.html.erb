<div class="row my-3">
    <div class="col-md-12 d-flex justify-content-center">
        <div class="card w-50">
            <div class = "card-header text-center">
              StockMinder - Şifremi Unuttum
            </div>  
            <div class="card-body">
              <div class="row p-2">
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  <div class="row my-2">
                    <div class="mb-3">
                      <%= f.label :email, class: "form-label" %>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Lütfen hesabınıza ait kayıtlı e-posta adresinizi girin" %>
                    </div>
                    <div class="actions text-center">
                      <%= f.submit "Şifremi Sıfırla", class: "btn btn-outline-success" %>
                    </div>
                  </div>
                <% end %>
                <%= render "devise/shared/links" %>
              </div>
            </div>
        </div>
    </div>
</div>

