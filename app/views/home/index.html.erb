<div class="row">
    <div class="col-md-12">
        <div class="row">
            <h3 class = "text-center border-bottom pb-3">Hisse Senedi Ara</h3>
            <%= form_tag root_path, class: "d-flex justify-content-center my-4",:method => "POST" do %>
                <%= text_field_tag "ticker", nil, placeholder: "Görüntilemek istediğiniz hisse senedi için firma adı giriniz", class: "form-control"%>
                <button class="btn btn-outline-success ms-2" type="submit">Search</button>
            <%end%>        
        </div>
    </div>
</div>
<%# RESULTS FROM API %>
<% if @stock.present? %>
    <div class="row my-3">
        <div class="col-md-12">
            <h3 class = "text-center">"Firma adı" için sonuçlar</h3>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#id<th>
                        <th>Firma Adı<th>
                        <th>Ticker<th>
                        <th>Açılış<th>
                        <th>Kapanış<th>
                        <th>Güncel Fiyat<th>
                        <th>Tarih<th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>#1<td>
                        <td>Nil Tuhafiye<td>
                        <td>NLtd<td>
                        <td>000<td>
                        <td>200<td>
                        <td>250<td>
                        <td>24/12/2024<td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
<% elsif @nothing.present? %>
    <div class="alert alert-danger text-center" role="alert">
        Hisse senedi adı boş geçilemez
    </div>    
<% end %>


<%# MY STOCKS  %>
<div class="row my-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title text-center border-bottom pb-3 ">Hisselerim</h5>
                <div class="row p-2">
                    <% if @stocks.present? %>
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>#id<th>
                                    <th>Firma Adı<th>
                                    <th>Ticker<th>
                                    <th>Açılış<th>
                                    <th>Kapanış<th>
                                    <th>Güncel Fiyat<th>
                                    <th>Tarih<th>
                                </tr>
                            </thead>
                            <tbody>
                                    <% @stocks.each do |stock|%>
                                        <tr>
                                            <td>#1<td>
                                            <td>Nil Tuhafiye<td>
                                            <td>NLtd<td>
                                            <td>000<td>
                                            <td>200<td>
                                            <td>250<td>
                                            <td>24/12/2024<td>
                                        </tr>
                                    <% end %>
                            </tbody>
                        </table>
                    <% else %>
                        <tr>
                            <div class="alert alert-warning text-center" role="alert">
                                Henüz kayıtlı hisseniz bulunmuyor. <%= link_to "Yeni hisse", new_stock_path %> oluştur.
                            </div>
                        </tr>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
